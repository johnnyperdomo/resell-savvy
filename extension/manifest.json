{
  "name": "ResellSavvy - Crosslisting tool for sellers",
  "version": "0.01",
  "description": "Crosslisting tool for sellers",
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "background",
    "tabs",
    "management",
    "cookies",
    "*://*.resellsavvy.com/*",
    "*://*.ebay.com/*",
    "*://*.etsy.com/*",
    "*://*.etsy.com/*",
    "*://*.depop.com/*",
    "*://*.kidizen.com/*",
    "*://*.mercari.com/*",
    "*://*.grailed.com/*",
    "*://*.poshmark.com/*"
  ],

  "background": {
    "page": "background/background.html"
  },

  "content_scripts": [
    {
      "js": [
        "third-party/jquery-3.6.0.min.js",
        "third-party/bootstrap.min.js",
        "third-party/sweetalert.min.js"
      ],
      "css": [
        "third-party/bootstrap.min.css",
        "third-party/sweetalert.min.css"
      ],
      "matches": [
        "*://*.etsy.com/*",
        "*://*.ebay.com/*",
        "*://*.depop.com/*",
        "*://*.kidizen.com/*",
        "*://*.facebook.com/*",
        "*://*.mercari.com/*",
        "*://*.grailed.com/*",
        "*://*.poshmark.com/*"
      ],
      "run_at": "document_start"
    },
    {
      "css": [
        "marketplaces/closets/depop-closet.css",
        "marketplaces/listings/depop-listing.css"
      ],
      "matches": ["*://*.depop.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/ebay-closet.css",
        "marketplaces/listings/ebay-listing.css"
      ],
      "matches": ["*://*.ebay.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/etsy-closet.css",
        "marketplaces/listings/etsy-listing.css"
      ],
      "matches": ["*://*.etsy.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/grailed-closet.css",
        "marketplaces/listings/grailed-listing.css"
      ],
      "matches": ["*://*.grailed.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/kidizen-closet.css",
        "marketplaces/listings/kidizen-listing.css"
      ],
      "matches": ["*://*.kidizen.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/mercari-closet.css",
        "marketplaces/listings/mercari-listing.css"
      ],
      "matches": ["*://*.mercari.com/*"]
    },
    {
      "css": [
        "marketplaces/closets/poshmark-closet.css",
        "marketplaces/listings/poshmark-listing.css"
      ],
      "matches": ["*://*.poshmark.com/*"]
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
