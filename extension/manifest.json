{
  "name": "ResellSavvy - Crosslisting tool for sellers",
  "version": "1",
  "description": "Crosslisting tool for sellers",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "activeTab",
    "background",
    "tabs",
    "management",
    "cookies",
    "*://*.resellsavvy.com/*",
    "*://*.ebay.com/*",
    "*://*.etsy.com/*",
    "*://*.etsy.com/*",
    "*://*.depop.com/*",
    "*://*.kidizen.com/*",
    "*://*.mercari.com/*",
    "*://*.grailed.com/*",
    "*://*.poshmark.com/*",
    "*://www.picupload.ebay.com/*"
  ],

  "background": {
    "page": "background/background.html"
  },

  "content_scripts": [
    {
      "matches": ["https://bulkedit.ebay.com/*"],
      "js": [
        "third-party/jquery-3.6.0.min.js",
        "marketplaces/new-item/bulkedit-iframe.js"
      ],
      "all_frames": true
    },
    {
      "matches": ["*://www.picupload.ebay.com/*"],
      "js": [
        "third-party/jquery-3.6.0.min.js",
        "marketplaces/new-item/ebay-picupload-iframe.js"
      ],
      "all_frames": true
    },
    {
      "js": [
        "third-party/jquery-3.6.0.min.js",
        "third-party/bootstrap.min.js",
        "third-party/sweetalert.min.js",
        "classes/swal-alert.js",
        "classes/dom-event.js",
        "classes/helpers.js",
        "classes/image-renderer.js"
      ],
      "css": [
        "third-party/bootstrap.min.css",
        "third-party/sweetalert.min.css"
      ],
      "matches": [
        "*://*.etsy.com/*",
        "*://*.ebay.com/*",
        "*://*.depop.com/*",
        "*://*.kidizen.com/*",
        "*://*.facebook.com/*",
        "*://*.mercari.com/*",
        "*://*.grailed.com/*",
        "*://*.poshmark.com/*",
        "*://www.picupload.ebay.com/*"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_popup": "popup/popup.html"
  },

  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}
